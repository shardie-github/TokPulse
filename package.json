{
  "name": "tokpulse",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier . --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:install": "npx playwright install --with-deps",
    "ci:unit": "pnpm typecheck && pnpm lint && pnpm test && pnpm build",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "db:seed": "turbo run db:seed",
    "format:check": "prettier --check .",
    "quality:check": "turbo run typecheck && turbo run lint && turbo run format:check && turbo run test",
    "quality:fix": "turbo run lint -- --fix && pnpm format",
    "pre-commit": "turbo run typecheck && turbo run lint && turbo run test",
    "prepare": "husky install || true",
    "obs:dev": "docker-compose -f ops/docker-compose.observability.yml up -d",
    "obs:lint": "node scripts/lint-observability.mjs",
    "api:openapi": "node scripts/generate-openapi.mjs",
    "docs:dev": "cd apps/docs && pnpm dev",
    "docs:build": "cd apps/docs && pnpm build",
    "docs:lint": "cd apps/docs && pnpm lint",
    "billing:dev": "node scripts/billing-dev.mjs",
    "rbac:dev": "node scripts/rbac-dev.mjs",
    "feeds:gen": "node scripts/feeds-gen.mjs",
    "cache:purge": "node scripts/cache-purge.mjs",
    "ops:replay": "node scripts/ops-replay.mjs",
    "ops:simulate:traffic": "node scripts/ops-simulate-traffic.mjs",
    "spin:up": "node scripts/spin-up.mjs",
    "spin:down": "node scripts/spin-down.mjs",
    "doctor": "node scripts/doctor.mjs",
    "contracts:check": "node scripts/contracts-check.mjs",
    "env:validate": "node scripts/env-validate.mjs",
    "deps:graph": "node scripts/deps-graph.mjs",
    "seed:all": "node scripts/seed-all.mjs",
    "e2e:full": "pnpm test && pnpm e2e",
    "obs:smoke": "node scripts/obs-smoke.mjs",
    "ops:drill": "node scripts/ops-drill.mjs"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.0.4",
    "cspell": "^8.14.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.6",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.10",
    "markdownlint-cli": "^0.41.0",
    "prettier": "^3.3.3",
    "turbo": "^1.12.4",
    "typescript": "^5.4.5",
    "vite": "^5.4.8",
    "vitest": "^1.6.1",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write",
      "cspell --no-progress"
    ]
  },
  "version": "2.2.0"
}
