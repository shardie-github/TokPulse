{
  "dashboard": {
    "id": null,
    "title": "TokPulse Widget Performance",
    "tags": ["tokpulse", "widgets", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Widget Render Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(tokpulse_widget_render_ms_bucket[5m]))",
            "legendFormat": "p95 - {{surface}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(tokpulse_widget_render_ms_bucket[5m]))",
            "legendFormat": "p50 - {{surface}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Widget LCP Proxy",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(tokpulse_widget_lcp_proxy_ms_bucket[5m]))",
            "legendFormat": "p95 - {{surface}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(tokpulse_widget_lcp_proxy_ms_bucket[5m]))",
            "legendFormat": "p50 - {{surface}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Widget Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(tokpulse_widget_errors_total[5m])",
            "legendFormat": "{{surface}} - {{errorType}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Widget Error Rate by Surface",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(tokpulse_widget_errors_total[5m])) by (surface)",
            "legendFormat": "{{surface}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}