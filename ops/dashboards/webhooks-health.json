{
  "dashboard": {
    "id": null,
    "title": "TokPulse Webhooks Health",
    "tags": ["tokpulse", "webhooks"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Webhook Processing Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(tokpulse_webhook_processed_total[5m])",
            "legendFormat": "{{topic}} - {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Webhook Processing Duration",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(tokpulse_webhook_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{topic}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(tokpulse_webhook_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "p50 - {{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Webhook Queue Depth",
        "type": "timeseries",
        "targets": [
          {
            "expr": "tokpulse_webhook_queue_depth",
            "legendFormat": "{{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Webhook Redelivery Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "tokpulse_webhook_redelivery_rate",
            "legendFormat": "{{topic}} - {{storeId}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Webhook Error Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(tokpulse_webhook_processed_total{status=\"error\"}[5m]) / rate(tokpulse_webhook_processed_total[5m]) * 100",
            "legendFormat": "Error Rate - {{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}